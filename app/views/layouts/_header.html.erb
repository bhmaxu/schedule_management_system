<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "日程管理系统", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right" style="padding-top: 8px">
        <li><%= link_to "首页", root_path %></li>
        <li><%= link_to "帮助", help_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              账户 <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "账户", current_user %></li>
              <li><%= link_to "设置", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "注销", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "登录", login_path %></li>
        <% end %>
      </ul>
      <% if logged_in? %>
        <form class="navbar-form navbar-right search_bar" role="search" style="padding-top: 8px"
              action="/search" method="post">
          <div class="form-group">
            <input type="text" name="keyword" class="form-control" placeholder="输入关键词...">
          </div>
          <button type="submit" class="btn btn-default">搜索</button>
        </form>
        <form class="navbar-form navbar-right search_bar"
              action="/search_by_time" method="post">
          <div class="form-group">
            <input type="date" name="time" class="form-control" >
          </div>
          <button type="submit" class="btn btn-default">搜索</button>
        </form>
      <% end %>

    </nav>
  </div>
</header>