<%= form_for(@agenda_item) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "创建新的日程..." %>
  </div>
  <%= f.label "日期" %>
  <%= f.datetime_select :time , :default => Time.now%>
  <%= f.submit "发布", class: "btn btn-primary" %>
<% end %>
