<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.agenda_items.any? %>
      <h3>共创建了 <%= @user.agenda_items.count %> 条日程</h3>
      <ol class="agenda_items">
        <%= render @agenda_items %>
      </ol>
      <%= will_paginate @agenda_items %>
    <% end %>
  </div>
</div>