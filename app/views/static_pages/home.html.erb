<% provide(:title, "主页") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="agenda_item_form">
        <%= render 'shared/agenda_item_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>欢迎来到日程管理系统</h1>
    <h2>
    简单的日程管理系统，帮助您高效管理日程！
  </h2>
    <%= link_to "注册！", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>