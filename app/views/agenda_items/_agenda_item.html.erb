<li id="agenda_item-<%= agenda_item.id %>">
  <%= link_to gravatar_for(agenda_item.user, size: 50), agenda_item.user %>
  <span class="user"><%= link_to agenda_item.user.name, agenda_item.user %></span>
  <span class="content"><%= agenda_item.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(agenda_item.created_at) %> ago.
    <% if current_user?(agenda_item.user) %>
    <%= link_to "delete", agenda_item, method: :delete,
            data: {confirm: "确定删除？?"} %>
    <% end %>
  </span>
</li>